{% extends 'base.html.twig' %}

{% block title %}Bienvenidos{% endblock %}

{% block body %}
<link href="{{ asset('CSS/index.css') }}" rel="stylesheet" />
<div class="hero">
    <div class="hero-inner">
        <h1 class="titulo_principal">Peluquería Elegante</h1>
        <nav class="nav-bar">
            <a href="#servicios">Servicios</a>
            <a href="#trabajos">Trabajos</a>
            <a href="#contacto">Contacto</a>
            <a href="{{ path('login') }}">Iniciar sesión</a>
        </nav>
    </div>
</div>

<main>
    <section id="servicios">
        <h2 class="seccion_titulo">Nuestros Servicios</h2>
        <div class="servicios_grid">
            {% for item in servicio %}
                <div class="servicio_card">
                    <h3>{{ item.nombre }}</h3>
                    <p>{{ item.descripcion }}</p>
                </div>
            {% endfor %}
        </div>
    </section>

    <section id="trabajos">
        <h2 class="seccion_titulo">Nuestros Trabajos</h2>
        <div class="trabajos_galeria">
            <img src="https://media.istockphoto.com/id/511777075/es/foto/profesor-ayudando-a-los-estudiantes-formaci%C3%B3n-para-ser-hairdressers.jpg?s=612x612&w=0&k=20&c=_Nu3qZ2PCNWvKcACyQGe2YX33OwRTzPwnMEaxdkqcyI=" alt="Trabajo 1" />
            <img src="https://media.istockphoto.com/id/1030254288/es/foto/trabajar-sobre-el-cabello-del-cliente-en-el-sal%C3%B3n-de-la-peluquer%C3%ADa.jpg?s=612x612&w=0&k=20&c=Yj6-gFiTlTxRwa1MUWSjHzjJDadQO5e3L5pV4pNgyBc=" alt="Trabajo 2" />
            <img src="https://media.istockphoto.com/id/947995974/es/foto/mujer-joven-hablando-con-su-estilista-durante-una-cita-de-sal%C3%B3n.jpg?s=612x612&w=0&k=20&c=wHv3z4dvJyEMxXiHt6yt8jlz9y9fQe5kLNXBc3ydAok=" alt="Trabajo 3" />
            <img src="https://media.istockphoto.com/id/1385966731/es/foto/primer-plano-de-un-delantal-de-barbero-irreconocible.jpg?s=612x612&w=0&k=20&c=FTVKR0QiY-DCkWdjVJIWdJTKYI2PzwBKlMyayg3s8ts=" alt="Trabajo 4" />
        </div>
    </section>

    <section id="contacto">
        <h2 class="seccion_titulo">Contactanos</h2>
        <p>Podés encontrarnos en nuestras redes sociales o visitarnos en el local para reservar tu turno.</p>
    </section>
</main>
{% endblock %}
